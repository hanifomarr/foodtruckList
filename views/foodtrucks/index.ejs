<% layout("layouts/boilerplate") -%>
    <h1>List of Foodtrucks</h1>
    <% for(let foodtruck of foodtrucks){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="image-fluid" src="<%= foodtruck.img %>" alt="" style="width: 22rem;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= foodtruck.name %>
                        </h5>
                        <p class="card-text">
                            <%= foodtruck.location %>
                        </p>
                        <a href="/foodtruck/<%= foodtruck._id %>" class="btn btn-primary">Show</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>

